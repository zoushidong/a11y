<?xml version="1.0"?>
<suite name="graphics">
  <class>solaris_menu.SolarisMenuTest</class>
  <description>
    Tests that verify Graphics applications in the Opensolaris menu
  </description>
  <case name="Open Digital Camera Browser">
    <method>testOpenMenu</method>
    <description>It opens the Digital Camera Browser menu and closes the application.</description>
    <args>
      <menuitem>Digital Camera Browser</menuitem>
      <windowname>gtkam</windowname>
      <closetype>menu</closetype>
      <closename>mnuQuit</closename>
    </args>
  </case>
